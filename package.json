    "commitlint-config-gitmoji": "^2.2.10",
    "husky": "^8.0.1"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  }
