{
  "name": "music",
  "version": "0.14.1",
  "description": "Setup a disposable environment for downloading music from Spotify including metadata",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/music.git"
  },
  "scripts": {
    "release": "np"
